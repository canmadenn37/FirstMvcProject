@model IEnumerable<FirstMvcProject.Models.Category>


    <div class="container" p-3>

        <div class="row">

            <div class="col-lg-6">

                <h2 class="text-primary">
                    Kategori List
                </h2>
            </div>
            <div class="col-lg-6 text-right" >
                <a class="btn btn-primary" asp-controller="Category" asp-action="Create" >Yeni Katogori</a>
            </div>

        </div>

        <div class="row pt-4">

            @if (Model.Count() > 0)
            {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Katogori Ad</th>
                        <th>Sıra</th>
                        <th> İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.DisplayOrder</td>
                        <td>
                            <a class="btn btn-warning" >Düzenle</a> 
                            <a class="btn btn-danger">Sil</a>
                            <a class="btn btn-info">İnfo</a>


                        </td>
                    </tr>

                }


                    </tbody>
                </table>

            }
            else
            {
               <p> Tanımlı katogori yok!!</p>
            }
        </div>


    </div>